@model Blog_System.WEB.Areas.Admin.Models.Category.CreateCategoryViewModel
@{
    Layout = "_AddLayout";
    ViewData["title"] = "افزودن دسته بندی";
}
<link rel="stylesheet" href="/css/CreaeCategory.css">
<section class="content">
    <div class="box box-body">
        <div class="box box-primary">
            <h2>@ViewData["title"] </h2>
            <form method="post" action="/Admin/Category/Add" class="form-horizontal">
                <div class="form-group">
                    <label asp-for="Title" class="control-label">عنوان دسته‌بندی</label>
                    <input type="text" asp-for="Title" class="form-control" placeholder="عنوان دسته‌بندی را وارد کنید" required />
                    <span asp-validation-for="Title"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Slug" class="control-label">اسلاگ</label>
                    <input type="text" asp-for="Slug" class="form-control" placeholder="اسلاگ را وارد کنید" required />
                    <span asp-validation-for="Slug"></span>
                </div>

                <div class="form-group">
                    <label for="metaTag" class="control-label">متاتگ</label>
                    <input type="text" asp-for="Slug" class="form-control" placeholder="متاتگ را وارد کنید" />
                    <span asp-validation-for="MetaTag"></span>
                </div>

                <div class="form-group">
                    <label asp-for="MetaDescription" class="control-label">متا دیسکریپشن</label>
                    <textarea asp-for ="MetaDescription" class="form-control" placeholder="متا دیسکریپشن را وارد کنید" rows="4"></textarea>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-success btn-block">ایجاد دسته‌بندی</button>
                </div>
            </form>
        </div>
    </div>
</section>
