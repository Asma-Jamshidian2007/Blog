@model Blog_System.WEB.Areas.Admin.Models.Category.EditCategoryViewModel
@{
    Layout = "_EditLayout";
    ViewData["title"] = "ویرایش دسته بندی";
}
<link rel="stylesheet" href="/css/CreateCategory.css">
<link rel="icon" href="/img/logo/fabicon2.png">
<link rel="stylesheet" href="/css/plugins/bootstrap-rtl.css">
<link rel="stylesheet" href="/css/plugins/animate.min.css">
<link rel="stylesheet" href="/css/plugins/fontawesome.css">
<link rel="stylesheet" href="/css/plugins/modal-video.min.css">
<link rel="stylesheet" href="/css/plugins/owl.carousel.css">
<link rel="stylesheet" href="/css/plugins/slicknav.css">
<link rel="stylesheet" href="/css/plugins/loader.css">
<link rel="stylesheet" href="/css/plugins/splitting.css">
<link rel="stylesheet" href="/css/master.css">
<link rel="stylesheet" href="style.css">

<section class="content">
    <div class="box box-body">
        <div class="box box-primary">
            <h2 class="mb-4 text-center">@ViewData["title"]</h2>
            <form method="post" asp-area="Admin" asp-controller="Category" asp-action="Edit" class="form-horizontal">
                <div class="form-group mb-3">
                    <label asp-for="Title" class="control-label">عنوان دسته‌بندی</label>
                    <input type="text" asp-for="Title" class="form-control" placeholder="عنوان دسته‌بندی" required />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Slug" class="control-label">Slug</label>
                    <input type="text" asp-for="Slug" class="form-control" placeholder="Slug" required />
                    <span asp-validation-for="Slug" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="MetaTag" class="control-label">MetaTag</label>
                    <input type="text" asp-for="MetaTag" class="form-control" placeholder="MetaTag" />
                    <span asp-validation-for="MetaTag" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="MetaDescription" class="control-label">MetaDescription</label>
                    <textarea asp-for="MetaDescription" class="form-control" placeholder="MetaDescription" rows="4"></textarea>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-warning btn-block">ویرایش دسته‌بندی</button>
                </div>
            </form>
        </div>
    </div>
</section>

<style>
    .form-group {
        margin-bottom: 1.5rem;
        position: relative;
    }


    .form-control {
        border-radius: 15px;
        border: 1px solid rgba(208, 166, 244, 0.4);
        padding: 12px;
        background-color: rgba(255, 255, 255, 0.5);
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        transition: background-color 0.3s, border 0.3s, box-shadow 0.3s ease;
        position: relative;
    }


        .form-control::before {
            content: "";
            position: absolute;
            top: -10px;
            left: -10px;
            right: -10px;
            bottom: -10px;
            border: 2px solid rgba(208, 166, 244, 0.7);
            border-radius: 15px;
            transition: all 0.3s ease;
        }


        .form-control:focus {
            border-color: rgba(255, 193, 7, 0.8);
            box-shadow: 0 0 0 0.2rem rgba(255, 193, 7, 0.25);
        }


    .btn-warning {
        background-color: rgba(255, 193, 7, 0.8);
        border-color: rgba(255, 193, 7, 0.8);
        border-radius: 15px;
        padding: 14px 24px;
        font-size: 18px;
        transition: background-color 0.3s ease, border-color 0.3s ease;
        position: relative;
    }


        .btn-warning::before {
            content: "";
            position: absolute;
            top: -8px;
            left: -8px;
            right: -8px;
            bottom: -8px;
            border: 3px solid rgba(208, 166, 244, 0.5);
            border-radius: 15px;
            transition: all 0.3s ease;
        }


        .btn-warning:hover {
            background-color: #e0a800;
            border-color: #d39e00;
        }


    .box-primary {
        padding: 30px;
        border-radius: 20px;
        background-color: rgba(208, 166, 244, 0.3);
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        backdrop-filter: blur(10px);
        position: relative;
    }


        .box-primary::before {
            content: "";
            position: absolute;
            top: -15px;
            left: -15px;
            right: -15px;
            bottom: -15px;
            border: 5px solid rgba(208, 166, 244, 0.7);
            border-radius: 20px;
            transition: all 0.3s ease;
        }

    h2 {
        font-size: 28px;
        color: #6a4c9c;
        margin-bottom: 20px;
        text-align: center;
    }

    .mb-4 {
        margin-bottom: 1.5rem !important;
    }

    .text-center {
        text-align: center;
    }

    .text-danger {
        font-size: 0.875rem;
        color: #dc3545;
    }
</style>