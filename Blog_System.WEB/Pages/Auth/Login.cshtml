@page
@model Blog_System.WEB.Pages.Auth.LoginModel
@{
    Layout = "Shared/_AuthLayout";
    ViewData["Title"] = "ورود";
}

<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>@ViewData["Title"]</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
<link rel="stylesheet" href="../AuthLayout/css/style.css">

<div class="form-container">
    <ul class="nav nav-tabs mb-4" id="formTabs">
        <li class="nav-item">
            <button class="nav-link" id="login-tab" aria-controls="login" aria-selected="true">ورود</button>
        </li>
    </ul>

    <form method="post">
        <div class="mb-3 position-relative">
            <label for="loginUsername" class="form-label">نام کاربری</label>
            <i class="fas fa-user-circle form-control-icon"></i>
            <input type="text" class="form-control" asp-for="UserName" name="username" placeholder="نام کاربری خود را وارد کنید">
            <span class="text-danger" asp-validation-for="UserName"></span>

        </div>

        <div class="mb-3 position-relative">
            <label for="loginPassword" class="form-label">رمز عبور</label>
            <i class="fas fa-lock form-control-icon"></i>
            <input id="password" type="password" class="form-control" asp-for="Password" placeholder="پسورد خود را وارد کنید">
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
        <div>
            <small id="capsLockWarning" style="display:none; color:red;">Caps Lock روشن است!</small>
         </div>

        <button type="submit" class="btn btn-custom w-100">ورود</button>
        <br>
         <a href="./SignUp" class="btn btn-custom bg-white b-100" style="color:black;">اکانت ندارم</a>
    </form>
    <script src="~/js/validate.js"></script>
</div>
