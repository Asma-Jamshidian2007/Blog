@page
@model Blog_System.WEB.Pages.Auth.LoginSignupModel
@{
    Layout = "Shared/_AuthLayout";
    ViewData["Title"]="ورود یا ثبت نام";
}


<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>@ViewData["Title"]</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
<link rel="stylesheet" href="../AuthLayout/css/style.css">
<div class="form-container">
    <ul class="nav nav-tabs mb-4" id="formTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="login-tab" data-bs-toggle="tab" data-bs-target="#login" type="button" role="tab" aria-controls="login" aria-selected="true">ورود</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="signup-tab" data-bs-toggle="tab" data-bs-target="#signup" type="button" role="tab" aria-controls="signup" aria-selected="false">ثبت نام</button>
        </li>
    </ul>

    <div class="tab-content" id="formTabsContent">

        <div class="tab-pane fade show active" id="login" role="tabpanel" aria-labelledby="login-tab">
            <form>
                <div class="mb-3 position-relative">
                    <label for="loginUsername" class="form-label">نام کاربری</label>
                    <i class="fas fa-user form-control-icon"></i>
                    <input type="text" class="form-control" id="loginUsername" placeholder="نام کاربری را وارد کنید">
                </div>
                <div class="mb-3 position-relative">
                    <label for="loginPassword" class="form-label">رمز عبور</label>
                    <i class="fas fa-lock form-control-icon"></i>
                    <input type="password" class="form-control" id="loginPassword" placeholder="پسورد خود را وارد کنید">
                </div>
                <button type="submit" class="btn btn-custom w-100">ورود</button>
            </form>
        </div>

        <div class="tab-pane fade" id="signup" role="tabpanel" aria-labelledby="signup-tab">
            <form>

                <div class="mb-3 position-relative">
                    <label for="signupLastName" class="form-label">نام و نام خانوادگی</label>
                    <i class="fas fa-user form-control-icon"></i>
                    <input type="text" class="form-control" id="signupLastName" placeholder="نام خانوادگی خود را وارد کنید">
                </div>
                <div class="mb-3 position-relative">
                    <label for="signupUsername" class="form-label">نام کاربری</label>
                    <i class="fas fa-user-circle form-control-icon"></i>
                    <input type="text" class="form-control" id="signupUsername" placeholder="نام کاربری خود را انتخاب کنید">
                </div>
                <div class="mb-3 position-relative">
                    <label for="signupPassword" class="form-label">رمز عبور</label>
                    <i class="fas fa-lock form-control-icon"></i>
                    <input type="password" class="form-control" id="signupPassword" placeholder="پسورد خود را وارد کنید">
                </div>
                <button type="submit" class="btn btn-custom w-100">ثبت نام</button>
            </form>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>