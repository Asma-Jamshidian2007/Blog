@page
@model Blog_System.WEB.Pages.Auth.SignUpModel
@{
    Layout = "Shared/_AuthLayout";
    ViewData["Title"]="ثبت نام";
}


<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>@ViewData["Title"]</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
<link rel="stylesheet" href="../AuthLayout/css/style.css">
<div class="form-container">
    <ul class="nav nav-tabs mb-4" id="formTabs">

        <li class="nav-item">
            <button class="nav-link" id="signup-tab" aria-controls="signup" aria-selected="true">ثبت نام</button>
        </li>
    </ul>


            <form method="post">

                <div class="mb-3 position-relative">
                    <label for="signupLastName" class="form-label" >نام و نام خانوادگی</label>
                    <i class="fas fa-user form-control-icon"></i>
            <input type="text" class="form-control" id="signupLastName" asp-for="FullName" placeholder="نام خانوادگی خود را وارد کنید">
            <span class="text-danger" asp-validation-for="FullName"></span>
                </div>
                
                <div class="mb-3 position-relative">
                    <label for="signupUsername" class="form-label" >نام کاربری</label>
                    <i class="fas fa-user-circle form-control-icon"></i>
            <input type="text" class="form-control" id="signupUsername" asp-for="UserName" placeholder="نام کاربری خود را انتخاب کنید">
            <span class="text-danger" asp-validation-for="UserName"></span>
                </div>
                <div class="mb-3 position-relative">
                    <label for="signupPassword" class="form-label">رمز عبور</label>
                    <i class="fas fa-lock form-control-icon"></i>
            <input id="password" type="password" class="form-control" id="signupPassword" asp-for="Password" placeholder="پسورد خود را وارد کنید" />
                    <span class="text-danger" asp-validation-for="Password"></span>

                </div>
        <div>
            <small id="capsLockWarning" style="display:none; color:red;">روشن است capsLock</small>
        </div>
                <button type="submit" class="btn btn-custom w-100">ثبت نام</button>
                <br>
        <a href="./Login" class="btn btn-custom bg-white w-100" style="color:black;">اکانت دارم</a>
        <script src="~/js/validate.js"></script>
            </form>
        </div>

