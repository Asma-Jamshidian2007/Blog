                    <div class="inner_text" data-scroll>
                        <h2>@Model.Post.Title</h2>
                        <div class="post-meta">
                            <a href="#">@Model.Post.UserName</a>
                            <span class="separator">|</span>
                            <a href="#">@Model.Post.CreationDate</a>
                            <span class="separator">|</span>
                            <a href="#" class="views"><i class="fas fa-eye"></i>Views @Model.Post.Visit </a>
                            <span class="separator">|</span>
                            <a href="#comments" class="comments"><i class="fas fa-comment"></i>Comments </a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="blog_area section-padding">
